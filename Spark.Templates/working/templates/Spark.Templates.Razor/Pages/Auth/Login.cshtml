@page "/login"
@model LoginModel
@{
	Layout = "_AuthLayout";
	ViewData["Title"] = "Login";
}
﻿//#if (IsTailwind)
<div class="sm:py-12">
	<section class="w-full sm:max-w-md mx-auto py-20 flex flex-col justify-center items-center">
		<a href="/">
			<img src="/images/logo.png" class="h-20 w-auto" />
		</a>
		<h1 class="text-center mt-6 text-center text-3xl font-bold tracking-tight text-black">
			Login to your account
		</h1>
		<form method="post" class="mt-6 flex flex-col py-8 px-4 sm:px-10 bg-white sm:mx-auto sm:w-full sm:max-w-md shadow-lg rounded-md">
			<div class="mb-1 text-red-500 text-sm">
				@Html.ValidationSummary()
			</div>
			<div>
				<label asp-for="@Model.Login.Email" class="block font-medium text-sm text-gray-700">Email address</label>
				<div class="mt-1">
					<input asp-for="@Model.Login.Email" type="email" autocomplete="email" class="border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 rounded-md shadow-sm block mt-1 w-full" />
				</div>
				<div class="mt-1 text-red-500 text-sm">
					@Html.ValidationMessageFor(m => m.Login.Email)
				</div>
			</div>
			<div class="mt-8">
				<label asp-for="@Model.Login.Password" class="block font-medium text-sm text-gray-700">Password</label>
				<div class="mt-1">
					<input asp-for="@Model.Login.Password" type="password" autocomplete="current-password" class="border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 rounded-md shadow-sm block mt-1 w-full" />
				</div>
				<div class="mt-1 text-red-500 text-sm">
					@Html.ValidationMessageFor(m => m.Login.Password)
				</div>
			</div>
			<div class="mt-8">
				<label for="remember_me" class="inline-flex items-center">
					<input asp-for="@Model.Login.RememberMe" type="checkbox" class="rounded border-gray-300 text-indigo-600 shadow-sm focus:ring-indigo-500">
					<span class="ml-2 text-sm text-gray-600">Remember me</span>
				</label>
			</div>
			<div class="mt-8 flex justify-end items-center">
				<a href="/register" class="underline text-sm text-gray-600 hover:text-gray-900 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
					Don't have an account? Sign up
				</a>
				<button type="submit" class="inline-flex items-center px-4 py-2 bg-indigo-700 border border-transparent rounded-md font-semibold text-xs text-white uppercase tracking-widest hover:bg-gray-700 focus:bg-gray-700 active:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition ease-in-out duration-150 ml-3">
					Login
				</button>
			</div>
		</form>
	</section>
</div>
//#endif
